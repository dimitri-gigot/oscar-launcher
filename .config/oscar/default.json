{
    "width": 400,
    "theme": "light",
    "items": [
        {
            "label": "clock",
            "type": "output",
            "class_name": "clock",
            "interval": 1,
            "shell": true,
            "command": "date '+%H:%M:%S'"
        },
        {
            "type": "runner",
            "class_name": "runner"
        },
        {
            "type": "button",
            "label": "Readme",
            "command": "xdg-open https://github.com/dimitri-gigot/oscar-launcher"
        },
        {
            "type": "button",
            "label": "About",
            "command": "oscar --open about"
        },
        {
            "type": "separator"
        },
        {
            "label": "Quit",
            "class_name": "quit"
        }
    ]
}
